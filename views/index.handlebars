

<div class="row justify-content-center mt-4">
  <img src="assets/images/burger.png"/>
  <h3 class="w-100 text-center text-danger p-1">Eat that burger!</h3>

<div> 
 <h5>Burgers you want to eat!</h5>
  <table class="table table-light">
    <thead>
      <tr>
        <th>ID</th>
        <th>Burger name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block}}
          {{/unless}}
      {{/each}}
    </tbody>
  </table>

<h5>Burgers you devored!</h5>



</div>
 
<h6 class="w-100 text-center">Enter and submit the burger you want to eat</h6>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>

</div>



